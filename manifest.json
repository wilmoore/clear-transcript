{
  "manifest_version": 3,
  "name": "Clear Transcript",
  "version": "1.0.0",
  "description": "Reliable transcript extraction for YouTube videos, Shorts, and fullscreen mode",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtube.com/*"
  ],
  "background": {
    "service_worker": "src/background/service-worker.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://youtube.com/*"
      ],
      "js": ["src/content/index.ts"],
      "css": [],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "src/options/index.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    },
    "default_title": "Clear Transcript"
  },
  "web_accessible_resources": [
    {
      "resources": ["ui/styles/*.css"],
      "matches": ["https://www.youtube.com/*", "https://youtube.com/*"]
    }
  ]
}
