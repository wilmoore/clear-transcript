{
  "name": "clear-transcript",
  "version": "1.0.1",
  "description": "Chrome extension for reliable YouTube transcript extraction",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch --mode development",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@types/chrome": "^0.1.32",
    "@vitest/coverage-v8": "^4.0.16",
    "happy-dom": "^20.0.11",
    "typescript": "^5.3.3",
    "vite": "^7.3.0",
    "vite-plugin-web-extension": "^4.5.0",
    "vitest": "^3.2.4"
  }
}
